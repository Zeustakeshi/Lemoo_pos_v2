@model Lemoo_pos.Models.ViewModels.StoreOverviewViewModel

<div class="col-lg-8">
    <div class="row">
        <div class="col-lg-4 col-md-4">
            <div class="card card-block card-stretch card-height">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4 card-total-sale">
                        <div>
                            <p class="mb-2">Doanh thu</p>
                            <h4 id="store-overview-revenue-value">
                                @Model.Revenue
                            </h4>
                        </div>
                    </div>
                    <div class="iq-progress-bar mt-2">
                        <span
                            class="bg-success iq-progress progress-1"
                            data-percent="75"
                        >
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4">
            <div class="card card-block card-stretch card-height">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4 card-total-sale">
                        <div class="icon iq-icon-box-2 bg-info-light">
                            <img
                                src="/images/product/1.png"
                                class="img-fluid"
                                alt="image"
                            />
                        </div>
                        <div>
                            <p class="mb-2">Số đơn hàng:</p>
                            <h4>@Model.TotalSales</h4>
                        </div>
                    </div>
                    <div class="iq-progress-bar mt-2">
                        <span
                            class="bg-info iq-progress progress-1"
                            data-percent="85"
                        >
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4">
            <div class="card card-block card-stretch card-height">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4 card-total-sale">
                        <div class="icon iq-icon-box-2 bg-danger-light">
                            <img
                                src="/images/product/2.png"
                                class="img-fluid"
                                alt="image"
                            />
                        </div>
                        <div>
                            <p class="mb-2">Số sản phẩm</p>
                            <h4>@Model.TotalProducts</h4>
                        </div>
                    </div>
                    <div class="iq-progress-bar mt-2">
                        <span
                            class="bg-danger iq-progress progress-1"
                            data-percent="70"
                        >
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
     const formatMoney = (money) => {
        return new Intl.NumberFormat("vi-VN", {
            style: "currency",
            currency: "VND",
        }).format(money);
    };
    document.getElementById("store-overview-revenue-value").textContent = formatMoney(@Model.Revenue)
</script>
