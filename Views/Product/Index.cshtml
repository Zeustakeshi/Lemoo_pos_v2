@model List<Lemoo_pos.Models.ViewModels.ProductResponseViewModel>

@{
    Layout = "_LayoutHome";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách sản phẩm</h4>
                    <p class="mb-0">
                        Danh sách sản phẩm quyết định cách trình bày sản phẩm một cách hiệu quả và cung cấp không gian 
                      <br/>  để liệt kê các sản phẩm và sản phẩm của bạn theo cách hấp dẫn nhất.
                    </p>
                </div>
                <a href="/products/create"
                   class="btn btn-primary add-list">
                    <i class="las la-plus mr-3"></i>Thêm sản phẩm
                </a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            @* <th>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox"
                                           class="checkbox-input"
                                           id="checkbox1" />
                                    <label for="checkbox1"
                                           class="mb-0"></label>
                                </div>
                            </th> *@
                            <th>Sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Số biến thể</th>
                            <th>Thương hiệu</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        @foreach (var product in Model)
                        {
                            <tr>
                                @* <td>
                                    <div class="checkbox d-inline-block">
                                        <input type="checkbox"
                                               class="checkbox-input"
                                               id="checkbox2" />
                                        <label for="checkbox2"
                                               class="mb-0"></label>
                                    </div>
                                </td> *@
                                <td >
                                    <div class="d-flex align-items-center">
                                        <img src="@product.Image"
                                             class="img-fluid rounded avatar-50 mr-3"
                                             alt="image" />
                                        <div>
                                            @product.Name
                                            <p class="mb-0">
                                                <small>
                                                    @product.Category?.Name
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </td>

                                <td>@product.Category?.Name</td>
                                <td style="text-align:center;">
                                    <h6 >(@product.VariantCount)</h6>
                                    <a href="/products/@product.Id/variants">Xem chi tiết</a>
                                </td>
                                <td>Lakme</td>
                                <td>@product.CreatedAt</td>
                                <td>@product.UpdatedAt</td>
                                <td>
                                    <div class="d-flex align-items-center list-action">
                                        <a class="badge badge-info mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Xem trước"
                                           href="/products/@product.Id">
                                            <i class="ri-eye-line mr-0"></i>
                                        </a>
                                        <a class="badge bg-success mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Sửa"
                                           href="#">
                                            <i class="ri-pencil-line mr-0"></i>
                                        </a>
                                        <a class="badge bg-warning mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Xóa"
                                           href="#">
                                            <i class="ri-delete-bin-line mr-0"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Page end  -->
</div>

