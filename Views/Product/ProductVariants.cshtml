@model List<Lemoo_pos.Models.ViewModels.ProductVariantResponseViewModel>
@{
    Layout = "_LayoutHome";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách biến thể</h4>
                 
                </div>
                <a href="/categories/create"
                   class="btn btn-primary add-list">
                    <i class="las la-plus mr-3"></i>Thêm biến thể
                </a>
            </div>
        </div>
        <div class="col-lg-12">
           
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th>Tên biến thể</th>
                            <th>Ảnh</th>
                            <th>SkuCode</th>
                            <th>BarCode</th>
                            <th>Giá nhập</th>
                            <th>Giá bán</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        @foreach (var variant in Model)
                        {
                            <tr>
                                <td>
                                    @variant.Name
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">

                                        <img src="@(!string.IsNullOrEmpty(variant.Image) ? variant.Image : "http://res.cloudinary.com/dymmvrufy/image/upload/v1732958992/lemoo_pos/products/cgvy4owbou09tb6okwvu.svg")"
                                             class="img-fluid rounded avatar-50 mr-3"
                                             alt="image" />
                                    </div>
                                </td>
                                <td>@variant.SkuCode</td>
                                <td>@variant.BarCode</td>
                                <td>@variant.CostPrice</td>
                                <td>@variant.SellingPrice</td>
                                <td>@variant.CreatedAt</td>
                                <td>@variant.UpdatedAt</td>
                                <td>
                                    <div class="d-flex align-items-center list-action">
                                        <a class="badge badge-info mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Xem trước"
                                           href="#">
                                            <i class="ri-eye-line mr-0"></i>
                                        </a>
                                        <a href="/products/@variant.Product.Id/variants/@variant.Id" class="badge bg-success mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Cập nhật">
                                            <i class="ri-pencil-line mr-0"></i>
                                        </a>
                                        <a class="badge bg-warning mr-2"
                                           data-toggle="tooltip"
                                           data-placement="top"
                                           title=""
                                           data-original-title="Xóa"
                                           href="#">
                                            <i class="ri-delete-bin-line mr-0"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
      
    </div>
    <!-- Page end  -->
</div>

