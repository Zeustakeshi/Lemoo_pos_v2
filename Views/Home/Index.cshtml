@{ Layout = "_LayoutHome"; }

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4">
            <div
                class="card card-transparent card-block card-stretch card-height border-none"
            >
                <div class="card-body p-0 mt-lg-2 mt-0">
                    <h3 class="mb-3">Xin chào, @ViewBag.UserName</h3>
                    <p class="mb-0 mr-4">
                        Trang tổng quan của bạn cung cấp cho bạn chế độ xem về
                        hiệu suất chính hoặc quy trình kinh doanh.
                    </p>
                </div>
            </div>
        </div>
       @await Component.InvokeAsync("StoreOverview") 
        @await Component.InvokeAsync("SalesOverview")
        @await Component.InvokeAsync("TopProduct") 
        @await Component.InvokeAsync("PaymentMethodChart") 
    </div>

    <!-- Page end  -->
</div>
