@model Lemoo_pos.Models.ViewModels.RegisterStoreViewModel
@{ 
    Layout = "_LayoutAuth"; 
}
<div class="card auth-card">
    <div class="card-body p-0">
        <div class="d-flex align-items-center auth-content">
            <div class="col-lg-7 align-self-center">
                <div class="p-3">
                    <h2 class="mb-2">Tạo tài khoản</h2>
                    <p>Đăng ký cửa hàng mới với Lemoo Pos</p>

                    @if (@ViewData["Error_message"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["Error_message"]
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        asp-for="Name"
                                        class="floating-input form-control"
                                        type="text"
                                        placeholder=" "

                                    />
                                    <label asp-for="Name">Tên bạn là gì?</label>
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        class="floating-input form-control"
                                        type="text"
                                        placeholder=" "
                                        asp-for = "StoreName"
                                    />
                                    <label asp-for="StoreName">Tên cửa hàng?</label>
                                </div>
                                <span asp-validation-for="StoreName" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        class="floating-input form-control"
                                        type="email"
                                        placeholder=" "
                                           asp-for="Email" />
                                    <label asp-for="Email">Địa chỉ email</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        class="floating-input form-control"
                                        type="text"
                                        placeholder=" "
                                           asp-for="Phone" />
                                    <label asp-for="Phone">Số điện thoại</label>
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        class="floating-input form-control"
                                        type="password"
                                        placeholder=" "
                                           asp-for="Password" />
                                    <label asp-for="Password">Mật khẩu</label>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-6">
                                <div class="floating-label form-group">
                                    <input
                                        class="floating-input form-control"
                                        type="password"
                                        placeholder=" "
                                    />
                                    <label>Nhập lại mật khẩu</label>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-12">
                                <div
                                    class="custom-control custom-checkbox mb-3"
                                >
                                    <input
                                        type="checkbox"
                                        class="custom-control-input"
                                        id="customCheck1"
                                    />
                                    <label
                                        class="custom-control-label"
                                        for="customCheck1"
                                        >Tôi đã đọc và đồng ý với điều khoản sử
                                        dụng</label
                                    >
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Sign Up
                        </button>
                        <p class="mt-3">
                            Tôi đã có cửa hàng tại Lemoo
                            <a href="/auth/login" class="text-primary"
                                >Đăng nhập ngay</a
                            >
                        </p>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 content-right">
                <img
                    src="/images/login/01.png"
                    class="img-fluid image-right"
                    alt=""
                />
            </div>
        </div>
    </div>
</div>
