@model Lemoo_pos.Models.ViewModels.ResetPasswordViewModel
@{
    Layout = "_LayoutAuth";
}

<div class="card auth-card">
    <div class="card-body p-0">
        <div class="d-flex align-items-center auth-content">
            <div class="col-lg-7 align-self-center">
                <div class="p-3">
                    <h2 class="mb-2">Đổi mật khẩu</h2>
                    <span asp-validation-for="Token" class="text-danger small"></span>
                    <form asp-action="ResetPassword" method="post">
                        @if (@ViewData["Error_message"] != null)
                        {
                            <div class="alert alert-danger">
                                @ViewData["Error_message"]
                            </div>
                        }


                        <input hidden class="floating-input form-control"
                               type="password"
                               value="@ViewData["token"]"
                               asp-for="Token" />

                        <div class="row my-4">
                            <div class="col-lg-12 my-2">
                                <div class="floating-label form-group">
                                    <input class="floating-input form-control"
                                           type="password"
                                           asp-for="Password" />
                                    <label >Mật khẩu</label>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-lg-12 my-2">
                                <div class="floating-label form-group">
                                    <input class="floating-input form-control"
                                           type="password"
                                           asp-for="ConfirmPassword" />
                                    <label >Nhập lại mật khẩu</label>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                            
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Đổi mật khẩu
                        </button>
                      
                    </form>
                </div>
            </div>
            <div class="col-lg-5 content-right">
                <img src="/images/login/01.png"
                     class="img-fluid image-right"
                     alt="" />
            </div>
        </div>
    </div>
</div>

<script>

</script>