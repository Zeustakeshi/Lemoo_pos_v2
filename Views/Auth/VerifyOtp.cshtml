@{
    Layout = "_LayoutAuth";
}





<div class="card auth-card">
  
    <div class="card-body p-0">
        <div class="d-flex align-items-center auth-content">
            
            <div class="col-lg-7 align-self-center">
                <div class="p-3">
                    @if (ViewBag.resendErrorMessage == null || ViewBag.verifyErrorMessage == null)
                    {
                        <img src="/images/login/mail.png"
                             class="img-fluid"
                             width="80"
                             alt="" />
                    }

               
                    <h2 class="mt-3 mb-0">Xin chào, @ViewBag.name!</h2>

                    @if (ViewBag.resendErrorMessage != null)
                    {
                        <div class="alert alert-danger my-3" role="alert">
                            <div class="iq-alert-text">@ViewBag.resendErrorMessage</div>
                        </div>
                    }
                    else if (ViewBag.verifyErrorMessage != null)
                    {
                        <div class="alert alert-danger my-3" role="alert">
                            <div class="iq-alert-text">@ViewBag.verifyErrorMessage</div>
                        </div>
                    }
                    else
                    {
                        <p class="cnf-mail mb-1">
                            Mã xác thực tài khoản đã được gửi đến địa chỉ @ViewBag.email vui lòng kiểm tra hòm thư của bạn.
                        </p>
                    }

                    @if(ViewBag.resendSuccessMaessage != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <div class="iq-alert-text">@ViewBag.resendSuccessMaessage</div>
                        </div>
                    }

                    <form onsubmit="handleShowLoading()" id="otp-form" class="d-flex align-items-center" style="width: 100%; gap: 20px;" method="post" action="/auth/verify-otp">
                        <div class="form-group">
                            <input type="text" class="form-control" id="plainOtp" name="plainOtp" placeholder="Nhập mã OTP" required>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                        </div>
                    </form>

                    <div class="d-flex">
                        <p class="mr-2">Bạn chưa nhận được mail?</p>
                        <a href="/auth/resend-otp" class="text-primary">Gửi lại</a>
                    </div>
                   
                </div>
            </div>
            <div class="col-lg-5 content-right">
                <img
                    src="/images/login/01.png"
                    class="img-fluid image-right"
                    alt=""
                />
            </div>
        </div>
    </div>
</div>

