@{
    Layout = "_LayoutAuth";
}


<div class="card auth-card">
    <div class="card-body p-0">
        <div class="d-flex align-items-center auth-content">
            <div class="col-lg-7 align-self-center">
                <div class="p-3">
                    <img src="/images/login/mail.png"
                         class="img-fluid"
                         width="80"
                         alt="" />

                    @{
                        if (ViewBag.verifySuccess) {
                            <h2 class="mt-3 mb-0">Xác thực thành công</h2>
                        }
                        else
                        {
                            <h2 class="mt-3 mb-0">Xác thực thất bại</h2>
                            <p class="cnf-mail mb-1">
                                Mã xác thực không hợp lệ, liên kết xác thực của bạn có thể đã hết hạn vui lòng yêu cầu liên kết mới.
                            </p>
                        }
                    }
               
                  
                    <div class="d-flex">
                        <a href="/auth/register" class="text-primary">Tạo tài khoản</a>
                    </div>

                    <div class="d-inline-block w-100">
                        <a href="/" class="btn btn-primary mt-3">Back to Home</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 content-right">
                <img src="/images/login/01.png"
                     class="img-fluid image-right"
                     alt="" />
            </div>
        </div>
    </div>
</div>
